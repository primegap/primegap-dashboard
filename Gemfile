source 'http://rubygems.org'

ruby '2.2.3'

## web library/framework
gem 'sinatra'

## web server
gem 'thin'

## load env variables from .env file
gem 'dotenv'

## heroku platform-api client
gem 'platform-api'

## simple flash hash implementation for Sinatra apps.
gem 'sinatra-flash'

## activesupport of course
gem 'activesupport', require: false

## event machine
gem 'eventmachine'
gem 'em-http-request'
